.main_chat
  .main-header
    .main-header__left-name
      = current_user.groups.name
      .main-header__member
        Member :
        .main-header__member-list
          test-user
    .main-header__Edit-btn
      Edit
  .messages
    .message
      = render "messages/message"

  .form
    %form{action:"/", method:""}
      %input.send__message{name: "message", size: "30",placeholder: "type a message" }
      %label{class: "input-box__image"}
        %i.fa.fa-image
        %input{type: "file"}
    %input.submit-btn{type:"submit",value: "Send"}


